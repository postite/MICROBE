var selectedColor=#8E9430;
var champsColor=gray;
var hauteurChamp=28px;


var blackblock={ 
	
	display:inline-block;
	background-color:black;
	color:white;
	padding-left:5px;
	padding-right:5px;
	line-height:$hauteurChamp;
	font-size:16px;
	height:$hauteurChamp;
	font-family:$bree;
	font-weight:100;
	
}
	
	
var blackblockhover= {
	background-color:#0AF;
	cursor:hand;
}	

var bigblackblock={
	$blackblock;
	font-size:16px;
	font-family:$helvetica;
	font-weight:100;
}

form{

	//background-color:$mycolor;
	font-family:$bree;
	display:block;
	height:100%;
	float:left;
	
