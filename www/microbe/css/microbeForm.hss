	.collectionWrapper{
		padding:0 10px 0 10px;
		border: 1px dashed gray;
		position:relative;
		
		//background-color:#CDCDCD;
		
		
		.placeHolder{
			list-style:none;
			display:block;
			min-width:100px;
			min-height:100px;
			
			border:1px dashed gray;
			background:#0AF;
		}
		
		.collection{
		/*	float:left;*/
	//	float:left;
			padding:5px;
			margin-bottom:10px;
			background-color:#DCDCDC;
			min-width:100px;
			min-height:100px;
		}
		
	}//fin collection wrapper
	

	
	input[type="text"]{
		margin-top:0px;
		height:$hauteurChamp;
		background: $champsColor;
		  border: none;
		  //border-radius: 3px;
		/*  font-family: italic 13px Georgia, "Times New Roman", Times, serif;*/
		  outline: none;
		  padding: 5px;
		  width: 100%;
	}
	
	input[type="file"]{
		color:#fff;
		 input[type="submit"]{
			background:$buttonColor ;
			font:$myLabelFont;
			  border: none;
			  border-radius: 20px;
		}
	}
	
	textarea {
	  background: #fff;
	  border: none;
	  border-radius: 3px;
	/*  font-family: italic 13px Georgia, "Times New Roman", Times, serif;*/
	  outline: none;
	  padding: 5px;
	  width: 200px;
	}
	
	textarea:focus{
		background-color:gray;
	}
	
	button {
		height:34px;
	  background:$buttonBackground;
	  border: none;
	 // border-radius: 20px;
	  color:#ffffff;
	  display: block;
		font:$myLabelFont;
		
	  letter-spacing: 1px;
	  margin:5px;
	  padding: 7px 25px;
	  //text-shadow: 0 1px 1px #000000;
	  //text-transform: uppercase;
	
	}
	button:hover{
			 background:$selectedColor;
			 cursor: pointer;
			color:$buttonColor;
		}
	.tailleSelector{
		font-size:36px;
		.taille{
			border:1px solid  black ;
		}
	}

input[type="submit"]{
	background-color:black;
	border-style:none;
	color:white;
//	background-image :url("assets/images/tag_03.png");
}
	
}//fin form closure

.imageuploader{
	position:relative;
			.hiddenfileinput{
				visibility:hidden;
					font-size: 45px; 
					width:45px;
					height:45px;
					top:0px; 
					color:green;
					opacity: 0.3;
			}
			.file_input_button

			{
				display:block;
				color:white;
				font-size:12px;
				height:38px;
				width:40px; 
				padding:0 2px;
				line-height:38px;
				position: absolute; 
				top: 0px;
				right:45px;
				background-color:black;
			}
			.file_input_button:hover{
				background-color:#00AAFF;
				cursor:hand;
	
			}

			#uploadButton{
				width: 38px;
				height:38px;
				position: absolute; 
				top: 0px;
				right:0px;
				background-image:url("assets/images/up.png");
	
			}
			#uploadButton:hover{
				cursor:hand;
				background-image:url("assets/images/up_hover.png");
	
			}

}///fin .image uploader


